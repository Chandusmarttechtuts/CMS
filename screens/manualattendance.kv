<MyCard>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: self.minimum_height
    padding: "8dp"

    MDLabel:
        text: root.name
        size_hint_x: 0.3

    MDLabel:
        text: root.reg_no
        size_hint_x: 0.3

    MDRoundFlatIconButton:
        text: "Absent" if root.state == "Present" else "Present"
        icon: "abscent.png" if root.state == "Present" else "present.png"
        md_bg_color: (0.7, 0.2, 0.2, 1) if root.state == "Present" else (0.2, 0.7, 0.2, 1)
        on_release: root.toggle_state()

<CustomRecycleView>:
    viewclass: 'MyCard'
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(100)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

<ManualAttendanceScreen>:
    name: "manual_attendance"
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                spacing: "10dp"
                size_hint_y: None
                CustomRecycleView:
                    id: custom_recycle_view